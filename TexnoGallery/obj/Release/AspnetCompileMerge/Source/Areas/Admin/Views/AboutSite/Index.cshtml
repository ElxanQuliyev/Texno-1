@model IEnumerable<TexnoGallery.Models.AboutU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section adminCss{
    <link rel="stylesheet" href="~/Areas/Admin/assets/css/photoswipe.css">
}
<h2 class="text-center mt-3">About Us</h2>

@foreach (var item in Model)
{
    <div class="my-gallery card-body row gallery-with-description">
        <figure class="col-xl-3 col-sm-6">
            <img src="~/Uploads/@item.AboutImage" itemprop="thumbnail" alt="Image description">
            <div class="caption" style="border: 1px solid #e4e6ee;padding: 5px 10px 10px 10px;border-top: none !important;">
                <h4>@item.Title</h4>
                <p>@item.Description</p>
                <div class="text-center">
                    <a class="btn btn-primary btn-sm" name="Edit" href=@Url.Action("Edit","AboutSite",new { id=item.Id})>
                        <i class="far fa-edit"></i> Edit
                    </a>
                </div>
            </div>
        </figure>
    </div>
}

