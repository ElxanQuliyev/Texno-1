@model IEnumerable<TexnoGallery.Models.ProductOption>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    int proId = ViewBag.ProId;
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",new { id=proId})
</p>
<table class="table">
    <tr>
        <th>
            Texniki göstərici adı
        </th>
        <th>
            Texniki göstərici açıqlama
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Option.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Option.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
