
@{
    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section mainCss{
    <link rel="stylesheet" href="~/FrontPublic/css/style.css"/>
    }
<div class="container mt-3">
    <div class="row justify-content-between">
        <h2>Səbət</h2>

    </div>


    <div class="">

        <div class="checkout-modal">

            <div class="Ptext">
                <p>Hele mehsul elave edilmiyib</p>
            </div>

        </div>
        <div class="check-footer">
            <hr />
            <ul class="d-flex justify-content-end">
                <li class="mr-5 ">
                    <div class="totalPrice ">
                        <b class="mr-2">Ümumi:</b>
                        <span style="color:#ffc107;font-size:1.2em; font-weight:600"></span>
                    </div>
                </li>

                <li class="mr-2 ">
                    <a class="btn btn-outline-primary btnH" href="@Url.Action("Index","Home")">Ana Səhifəyə qayıt</a>
                </li>
                @if (Session["user"] == null)
                {
                    <li>
                        <a class="btn btn-outline-success" href="@Url.Action("Login","MainAccount")">Daxil ol</a>
                    </li>
                }
                else
                {
                    <li>
                        <a class="btn btn-success btnCheck" style="font-weight:700" href="javascript:void(0)">Sifarişi Tamamla</a>
                    </li>

                }
            </ul>
        </div>
    </div>
</div>

@section mainJS{
    <script src="~/FrontPublic/js/maincart.js"></script>
    <script src="~/FrontPublic/js/checkout.js"></script>
}